<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="46dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/icon_login_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/shape_white_radius3"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="15dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="手机号"
            android:textColor="#ffa1a1a1"
            android:textSize="12sp" />

        <com.dazhukeji.douwu.view.MyEditText
            android:id="@+id/phoneEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:background="@null"
            android:hint="请输入手机号"
            android:textColor="#ffd7d4d4"
            android:textColorHint="#ffd7d4d4"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_white_radius3"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="15dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="验证码"
            android:textColor="#ffa1a1a1"
            android:textSize="12sp" />

        <com.dazhukeji.douwu.view.MyEditText
            android:id="@+id/codeEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:background="@null"
            android:hint="请输入验证码"
            android:textColor="#ffd7d4d4"
            android:textColorHint="#ffd7d4d4"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_white_radius3"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="15dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="新密码"
            android:textColor="#ffa1a1a1"
            android:textSize="12sp" />

        <com.dazhukeji.douwu.view.MyEditText
            android:id="@+id/passwordEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:background="@null"
            android:hint="请输入新密码"
            android:textColor="#ffd7d4d4"
            android:textColorHint="#ffd7d4d4"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="忘记密码?"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:gravity="end"
        android:layout_marginTop="10dp"
        android:textColor="#ff37c8f8"
        android:textSize="10sp"
        />

    <TextView
        android:id="@+id/confirmTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/icon_button_bg"
        android:gravity="center"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        android:text="重置密码"
        android:textColor="#ffdbdee7"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="您还没有乐舞账号？立即注册"
        android:textColor="#ffa1a1a1"
        android:textSize="10sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="34dp"/>
</LinearLayout>